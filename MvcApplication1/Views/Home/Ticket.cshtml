@model List<MovieSelling2.Models.TicketPrice>
@{
    ViewBag.Title = "Ticket";
}

<!-- Sub-menu -->
<div id="sub-navigation">
    <ul>
        <li><a href="#">GIA VÉ</a></li>
    </ul>
    <div id="search">
        <form action="home_submit" method="get" accept-charset="utf-8">
            <input type="submit" value="" class="search-button" />
        </form>
    </div>
</div>
<!-- end Sub-Menu -->

 <!-- NEWS -->
<div style="height: 10px">
</div>
<div id="main">
    <div id="content">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="box">
                <div class="head">
                    <h6>Bảng giá vé phim @Model[i].Feature</h6>
                </div>
                <div class="schedule">
                    @*<h3> Đây là giá ghế thường, ghế vip sẽ được cộng thêm @Html.DisplayFor(m => m[i].Vip) </h3>*@
                    <br/>

                    <table class="tableCus">
                        <tr>
                            <th width="100"></th>
                            <th width="150">Thứ 2 - Thứ 6</th>
                            <th width="150">Thứ 7 - Chủ Nhật</th>
                        </tr>
                        <tr>
                            <td>9h- 17h</td>
                            <td align="center">@Html.DisplayFor(m => m[i].NormalDayPrice)</td>
                            <td align ="center">@Html.DisplayFor(m => m[i].WeekendDayPrice)</td>
                        </tr>
                        <tr>
                            <td>17h- 23h</td>
                            <td align="center">@Html.DisplayFor(m => m[i].NormalNightPrice)</td>
                            <td align="center">@Html.DisplayFor(m => m[i].WeekendNightPrice)</td>
                        </tr>
                    </table>
                    <br />

                </div>
                <div class="cl">&nbsp;</div>
            </div>
        }
        </div>
</div>
