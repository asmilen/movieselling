                        </div>

                    </div>
                    <!-- end Movie -->
                }
            }
            <div class="cl">&nbsp;</div>
        </div>
        <!-- end Box -->

        <!-- Box -->
        <div class="box">
            <div class="head">
                <h2>PHIM SẮP CHIẾU</h2>
                <p class="text-right"><a href=@Url.Action("ComingSoon")>Xem Thêm</a></p>
            </div>

            @for (int i = 0; i < Model.listFilmComing.Count; i++)
            {
                if (i < 5)
                {
                    var item = Model.listFilmComing.ElementAt(i);
                    <!-- Movie -->
                    <div class="movie">

                        <div class="movie-image">

                            <a href="@Url.Action("ViewDetail", new { item.FilmID })"><span class="play"><span class="name">@item.Name</span></span><img src="data:image;base64,@System.Convert.ToBase64String(@item.Picture)" alt="movie" /></a>
                        </div>
                    </div>
                    <!-- end Movie -->
                }
                if (i == 5)
                {
                    var item = Model.listFilmComing.ElementAt(i);
                    <!-- Movie -->
                    <div class="movie last">

                        <div class="movie-image">

                            <a href="@Url.Action("ViewDetail", new { item.FilmID })"><span class="play"><span class="name">@item.Name</span></span><img src="data:image;base64,@System.Convert.ToBase64String(@item.Picture)" alt="movie" /></a>
                        </div>
                    </div>
                    <!-- end Movie -->
                }
            }
            <div class="cl">&nbsp;</div>
        </div>
        <!-- end Box -->
    </div>
    <!-- end Content -->
    </div>
<!-- end Main -->
