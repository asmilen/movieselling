@model MovieSelling.Models.Film
@{
    ViewBag.Title = "ViewDetail";
}
<link rel="stylesheet" type="text/css" href="~/Content/GetResource_005.css"> 
@Html.Partial("_subMenuPartial")
<!-- Main -->
<div id="main">
    <!-- Content -->

    <div id="content">

        <!-- Box -->
        <div class="box">
            <div class="head">
                <h6>@Model.Name</h6>
            </div>
            <!-- Movie -->
            <div class="movie">
                <div class="movie-image">
                    <a><img src="data:image;base64,@System.Convert.ToBase64String(@Model.Picture)" alt="movie" /></a>
                </div>
            </div>
            <div class="movieDetail">
                <div class="content">
                    <h5>Khởi chiếu:&nbsp;&nbsp;&nbsp; </h5><p>Từ @Model.StartDate.ToString(MovieSelling.DatabaseHelper.DateFormat) tới @Model.EndDate.ToString(MovieSelling.DatabaseHelper.DateFormat)</p><br>
                    <h5>Loại phim:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </h5><p>@Model.Category</p><br>
                    <h5>Diễn viên:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </h5><p>@Model.Actor</p><br>
                    <h5>Đạo diễn:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </h5><p>@Model.Director</p><br>
                    <h5>Hãng:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </h5><p>@Model.Company</p><br>
                    <h5>Thời lượng: &nbsp;&nbsp;&nbsp;</h5><p>@Model.filmLong phút</p><br>
                    <br>
                    <br>
                    <a class="button" href=@Url.Action("step1", "booking", new { FilmID = Model.FilmID , dateSche = "" , timeSChe = ""})>ĐẶT VÉ</a></>
                </div>
            </div>
            <div class="cl">&nbsp;</div>
    </div>
        <ul class="dn_tabsmvdetail">
            <li class="dn_tabsmvdt1" id="dn_tabsmvdt1">
                Tóm tắt nội dung
            </li>
            <li class="dn_tabsmvdt2" id="dn_tabsmvdt2">
                Lịch chiếu phim
            </li>
            <li class="dn_tabsmvdt3 tabsmvdtactive" id="dn_tabsmvdt3">
                Bình luận phim
            </li>
        </ul>
        <div style="display: none;" class="dn_contentmvdt dn_tabsmvdt2">

            <!-- -->
            <div style="height: 25px; line-height: 25px; background: #BEB195; padding-left: 10px;
                                            font-weight: bold; color: #FFF">
                NamSaiGon
            </div>
            <div style="height: 10px;">
            </div>
            </div>
            <div class="box">
                <div class="head">
                    <h6>Tóm tắt nội dung</h6>
                </div>
                <div class="movieDetail">
                    <div class="content">
                        <p>@Model.Description</p>
                    </div>
                </div>
                @if (Model.Picture1!=null && Model.Picture1.Length > 0)
            {
                <div class="movieDetail">
                    <div class="detail-image">
                        <a><img src="data:image;base64,@System.Convert.ToBase64String(@Model.Picture1)" alt="movie" /></a>
                    </div>
                </div>
            }
                @if (Model.Picture2!=null && Model.Picture2.Length > 0)
            {
                <div class="movieDetail">
                    <div class="detail-image">
                        <a><img src="data:image;base64,@System.Convert.ToBase64String(@Model.Picture2)" alt="movie" /></a>
                    </div>
                </div>
            }
                @if (Model.Picture3!=null &&  Model.Picture3.Length > 0)
            {
                <div class="movieDetail">
                    <div class="detail-image">
                        <a><img src="data:image;base64,@System.Convert.ToBase64String(@Model.Picture3)" alt="movie" /></a>
                    </div>
                </div>
            }
                @if (Model.Picture4!=null && Model.Picture4.Length > 0)
            {
                <div class="movieDetail">
                    <div class="detail-image">
                        <a><img src="data:image;base64,@System.Convert.ToBase64String(@Model.Picture4)" alt="movie" /></a>
                    </div>
                </div>
            }
                <div class="cl">&nbsp;</div>
            </div>
        </div>
</div>